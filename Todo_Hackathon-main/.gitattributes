# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Explicitly declare text files
*.md text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.py text eol=lf
*.css text eol=lf
*.html text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
